{
  "builds": [
    {
      "src": "thapargpt-frontend",
      "use": "nixpacks",
      "config": {
        "buildCommand": "npm install && npm run build",
        "startCommand": "npm start",
        "outputDirectory": "build"
      }
    },
    {
      "src": "backend",
      "use": "nixpacks",
      "config": {
        "startCommand": "node server.js"
      }
    }
  ],
  "routes": [
    {"handle": "frontend", "src": "/*", "dest": "/thapargpt-frontend"},
    {"handle": "api", "src": "/api/*", "dest": "/backend"}
  ],
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd thapargpt-frontend && npm install && npm run build",
    "startCommand": "cd thapargpt-frontend && npm start",
    "outputDirectory": "thapargpt-frontend/build",
    "installCommand": "cd thapargpt-frontend && npm install"
  },
  "deploy": {
    "startCommand": "cd backend && node server.js"
  }
}